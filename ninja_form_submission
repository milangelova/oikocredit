// GA4 reference for custom events: https://developers.google.com/analytics/devguides/collection/ga4/reference/events?client_type=gtag#custom_events

window.dataLayer = window.dataLayer || [];
window.dataLayer.push({
  event: 'ninja_form_submission',
  form_name: 'form name',
  form_id: '9', // Example: Unique form ID assigned by Ninja Forms
  form_submission_id: '67890', // Example: Unique submission ID
  first_name: 'John', // Example: User's first name
  last_name: 'Doe', // Example: User's last name
  email: 'john.doe@example.com', // Example: User's email address
  country: 'Germany', // Example: User's selected country
  language: 'German' // Example: User's preferred language
});

